@model ITLA_PE_MVC.Models.SolicitudViewModel

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-12">
    <div class="card" style="min-height: 500px; padding: 10px;">
        <div class="card-header" style="background-color: #023877; color: #fff">
            <h4 class="card-title" id="basic-layout-colored-form-control">SOLICITUD BECA</h4>
        </div>
        <div class="card-content  show">
            <div class="card-body">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Sheena Shrestha</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"> </div>

                            <div class=" col-md-9 col-lg-9 ">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Codigo Solicitud:</td>
                                            <td> @Html.DisplayFor(model => model.Solicitud.NoSolicitud)</td>
                                        </tr>
                                        <tr>
                                            <td>Nombre:</td>
                                            <td> @Html.DisplayFor(model => model.Solicitud.Nombres)</td>
                                        </tr>
                                        <tr>
                                            <td>Apellidos:</td>
                                            <td> @Html.DisplayFor(model => model.Solicitud.Apellidos)</td>
                                        </tr>
                                        <tr>
                                            <td>Documento Identificacion</td>
                                            <td>
                                                Tipo Documento:  @Html.DisplayFor(model => model.Solicitud.DocumentoTipoDesc)<br><br>No:  @Html.DisplayFor(model => model.Solicitud.IdentificacionCedula)
                                            </td>
                                        </tr>

                                        <tr>
                                        <tr>
                                            <td>Provincia</td>
                                            <td> @Html.DisplayFor(model => model.Solicitud.ProvinciaDesc)</td>
                                        </tr>
                                        <tr>
                                            <td>Municipio</td>
                                            <td> @Html.DisplayFor(model => model.Solicitud.MunicipioDesc)</td>
                                        </tr>
                                        <tr>
                                            <td>Calle</td>
                                            <td> @Html.DisplayFor(model => model.Solicitud.DireccionCalleNumero)</td>
                                        </tr>
                                        <tr>
                                            <td>Nivel Academico</td>
                                            <td> @Html.DisplayFor(model => model.Solicitud.NivelAcademicoDesc)</td>
                                        </tr>
                                        <tr>
                                            <td>programas Solicitados</td>

                                            <td>
                                                Opcion 1: @Html.DisplayFor(model => model.Solicitud.ProyectoEspecialMateriaGrupoDesc1)
                                            </td>
                                            <td>
                                                Opcion 2: @Html.DisplayFor(model => model.Solicitud.ProyectoEspecialMateriaGrupoDesc2)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                            <td><a href="#"> @Html.DisplayFor(model => model.Solicitud.Email)</a></td>
                                        </tr>
                                        <tr>
                                            <td>Contactos Telefonicos</td>

                                            <td>
                                                @Html.DisplayFor(model => model.Solicitud.TelResidencial)-(Telefono)
                                                <br>
                                                <br>
                                                @Html.DisplayFor(model => model.Solicitud.TelResidencial)-(Celular)
                                            </td>
                                        </tr>





                                    </tbody>
                                </table>


                                <h2 style="text-align:center">Anexos</h2>

                                <div class="row">
                                    <div class="column">
                                        <img src="https://drive.google.com/uc?id=1frBHdmiF50H30Pr-ibncB3E6tQDoi_wV&export=view" style="width:100%" onclick="openModal();currentSlide(1)" class="hover-shadow cursor">
                                    </div>
                                    <div class="column">
                                        <img src="https://drive.google.com/uc?id=1OYpr37zgxK2jcn8vYYKXFWgd_dGIhzKD&export=view" style="width:100%" onclick="openModal();currentSlide(2)" class="hover-shadow cursor">
                                    </div>
                                    <div class="column">
                                        <img src="https://drive.google.com/uc?id=1tbCWHkOd0CSneV40Q1_0E1iiqVt2T7A0&export=view" style="width:100%" onclick="openModal();currentSlide(3)" class="hover-shadow cursor">
                                    </div>

                                </div>

                                <div id="myModal" class="modal">
                                    <span class="close cursor" onclick="closeModal()">&times;</span>
                                    <div class="modal-content">

                                        <div class="mySlides">
                                            <div class="numbertext">1 / 3</div>
                                            <img src="https://drive.google.com/uc?id=1frBHdmiF50H30Pr-ibncB3E6tQDoi_wV&export=view" style="width:100%">
                                        </div>

                                        <div class="mySlides">
                                            <div class="numbertext">2 / 3</div>
                                            <img src="https://drive.google.com/uc?id=1OYpr37zgxK2jcn8vYYKXFWgd_dGIhzKD&export=view" style="width:100%">
                                        </div>

                                        <div class="mySlides">
                                            <div class="numbertext">3 / 3</div>
                                            <img src="https://drive.google.com/uc?id=1tbCWHkOd0CSneV40Q1_0E1iiqVt2T7A0&export=view" style="width:100%">
                                        </div>


                                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                                        <a class="next" onclick="plusSlides(1)">&#10095;</a>

                                        <div class="caption-container">
                                            <p id="caption"></p>
                                        </div>


                                        <div class="column">
                                            <img class="demo cursor" src="https://drive.google.com/uc?id=1frBHdmiF50H30Pr-ibncB3E6tQDoi_wV&export=view" style="width:100%" onclick="currentSlide(1)" alt="Nature and sunrise">
                                        </div>
                                        <div class="column">
                                            <img class="demo cursor" src="https://drive.google.com/uc?id=1OYpr37zgxK2jcn8vYYKXFWgd_dGIhzKD&export=view" style="width:100%" onclick="currentSlide(2)" alt="Snow">
                                        </div>
                                        <div class="column">
                                            <img class="demo cursor" src="https://drive.google.com/uc?id=1tbCWHkOd0CSneV40Q1_0E1iiqVt2T7A0&export=view" style="width:100%" onclick="currentSlide(3)" alt="Mountains and fjords">
                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                        <span class="pull-right">
                            <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                            <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                        </span>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Solicitud.IdSolicituds }) |
    @Html.ActionLink("Back to List", "Index")
</p>
@section Scripts {

    @Scripts.Render("~/bundles/modalscript")
}
