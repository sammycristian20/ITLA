            <input class="next action-button btn btn-primary" name="next" type="button" value="Sigientes" />
            <input class="previous action-button-previous btn btn-secondary" name="previous" type="button" value="Regresar" />
        </fieldset>
        <!-- fieldsets -->
        <fieldset>
            <div class="form-card">
                <div class="row">
                    <div class="col-7">
                        <h2 class="fs-title">
                            Documentos a adjuntar
                        </h2>
                    </div>
                    <div class="col-5">
                        <h2 class="steps">
                            Paso 5 - 5
                        </h2>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label for="validationServer04">
                            Cédula
                        </label>
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input aria-describedby="inputGroupFileAddon03" class="custom-file-input" id="inputGroupFile03" type="file" />
                                <label class="custom-file-label" for="inputGroupFile03">
                                    Cargar imagen
                                </label>
                            </div>
                        </div>
                        <div class="invalid-feedback" id="validationServer04Feedback">
                            Campo requerido.
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="validationServer04">
                            Comprobante de estudios(CERTIFICACION DE GRADO, NOTA DE BACHILLER O CERTIFICADO DE BACHILLERATO)
                        </label>
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input aria-describedby="inputGroupFileAddon03" class="custom-file-input" id="inputGroupFile03" type="file" />
                                <label class="custom-file-label" for="inputGroupFile03">
                                    Cargar imagen
                                </label>
                            </div>
