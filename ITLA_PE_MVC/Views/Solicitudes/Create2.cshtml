            </li>
            <li id="confirm">
                <i class="fas fa-check">
                </i>
                <strong>
                    Listo!
                </strong>
            </li>
        </ul>
        <div class="progress mb-4">
            <div aria-valuemax="100" aria-valuemin="0" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar">
            </div>
        </div>
        <!-- fieldsets -->
        <fieldset class="pb-0">
            <!-- form-card -->
            <div class="form-card">
                <div class="row">
                    <div class="col-7">
                        <h2 class="fs-title">
                            Datos Personales
